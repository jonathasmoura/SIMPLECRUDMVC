@model IEnumerable<SIMPLECRUD.MVC.Models.Curso>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar novo Curso", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Universidade.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Universidade.Nome)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.CursoId }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.CursoId }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.CursoId })
            </td>
        </tr>
    }

</table>
